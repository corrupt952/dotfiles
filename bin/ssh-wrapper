#!/bin/bash -e
config_path=${HOME}/.ssh/config
if [ "${SSH_CONFIG}" != "" ]; then
  config_path=${SSH_CONFIG}
fi

_edit_config() {
  $EDITOR $1
}

case "$1" in
  edit )
    _edit_config "${config_path}"
    ;;
  * )
    if [ -e "/proc/sys/fs/binfmt_misc/WSLInterop" ]; then
      # WSL
      /mnt/c/Windows/System32/OpenSSH/ssh.exe -F ${config_path} $*
    else
      # Darwin or Linux
      command ssh -F ${config_path} $*
    fi
    ;;
esac
