[extensions]
fetch =
rebase =
mq =
transplant =
record =
color =
pager =
progress =
eol =
graphlog =

[alias]
b = branch
bs = branches
pu = pull
rb = rebase
# push
nudge = push --rev .
push = ! echo "\033[31m(use 'hg nudge' to push changesets)\033[m"
# glog
gl = glog
gls =  glog --template '\033[31m{rev}:{node|short}\033[m | {date|shortdate} | {author|user}: {desc|strip|firstline}\n\033[36m{branches}\033[m\n'
gla = glog --stat --template '\033[31m{rev}:{node|short}\033[m | {date|shortdate} | {author|user}: {desc|strip|firstline}\n\033[36m{branches}\033[m\n'
qs = qseries -s
show = log -p --stat -r .
qshow = log -p --stat -r
aci = commit --amend

[pager]
pager = LESS='FSRX' less
quiet = True
attend = annotate, cat, diff, di, export, log, show, glog, gls, gla, help
ignore = 

[diff]
git = True

[color]
qseries.unapplied = white bold

# include
%include ~/.hgrc.local
